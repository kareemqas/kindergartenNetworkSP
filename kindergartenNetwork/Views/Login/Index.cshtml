                <a href="#">
                    <img src="~/Content/UploadedFile/logos/logo1.png" style="width: 220px" />
                    @*<img src="~/Content/UploadedFile/logos/logo.png" style="width: 250px" />*@
                </a>
            </div>
            <h3>@kindergartenNetwork.Resources.PublicNews.ForgotYourPassword</h3>
            <p> @kindergartenNetwork.Resources.PublicNews.EnterYourEmailAddressBelowToResetYourPassword. </p>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" />
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn red-thunderbird">@kindergartenNetwork.Resources.PublicNews.Back </button>
