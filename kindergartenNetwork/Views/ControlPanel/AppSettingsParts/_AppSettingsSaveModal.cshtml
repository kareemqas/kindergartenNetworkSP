@model kindergartenNetwork.Models.NewsModels.AppSettingsModel
@using (Html.BeginForm("SaveAppSettings", "ControlPanel", FormMethod.Post, new { @onsubmit = "return false;", @id = "SaveAppSettingsForm", name = "SaveAppSettingsForm" }))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>

                <h4 class="modal-title"> @kindergartenNetwork.Resources.PublicNews.Edit @kindergartenNetwork.Resources.PublicNews.Advertisement </h4>
                <input type="hidden" value="@Model.OAppSetting.ConKey" Name="ConKey" data-field="" />


            </div>
            <div class="modal-body">
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button> ErrorInField.
                </div>
                <div class="alert alert-success display-hide">
                    <button class="close" data-close="alert"></button>
                </div>
                <div class="form-horizontal ">
                    @Html.AntiForgeryToken()
                    <div class="form-group">

                        <div class="col-md-12">
                            <label class="control-label col-md-2 font-red-thunderbird">@kindergartenNetwork.Resources.PublicNews.Setup :</label>
                            <div class="col-md-8">
                                <p class="form-control-static"> @Model.OAppSetting.OKey.Name </p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label col-md-2 font-red-thunderbird">@kindergartenNetwork.Resources.PublicNews.Value :</label>
                            <div class="col-md-8">
                                <select class="selectpicker form-control ddlValue" name="ConValue" data-field="@kindergartenNetwork.Resources.PublicNews.Value" title="@kindergartenNetwork.Resources.PublicNews.Value">
                                    @foreach (var value in Model.LstValues)
                                    {
                                    <option @(value.Id == Model.OAppSetting.ConValue ? "selected" : "") value="@value.Id">@value.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn dark btn-outline" data-dismiss="modal">@kindergartenNetwork.Resources.PublicNews.Close</button>
                <button type="submit" class="btn green btn-outline">@kindergartenNetwork.Resources.PublicNews.Save</button>
                <button type="reset" class="btn red btn-outline">@kindergartenNetwork.Resources.PublicNews.Reset</button>
            </div>
        </div>

    </div>
}