<div class="portlet light portlet-fit ">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-layers font-red-thunderbird"></i>
            <span class="caption-subject font-red-thunderbird bold uppercase">@kindergartenNetwork.Resources.PublicNews.Comments</span>
        </div>
    </div>
    <div class="portlet-body">
        <form id="SearchForm" role="form">
            <div class="row">

                <div class="col-md-3 col-md-offset-2">
                    <div class="form-group">
                        <input type="text" class="form-control" dir="rtl" id="txtNameSearch" placeholder="@kindergartenNetwork.Resources.PublicNews.Name..." style="width:100%" />
                    </div>
                    <!-- /input-group -->
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input type="text" class="form-control" dir="rtl" id="txtEmailSearch" placeholder="@kindergartenNetwork.Resources.PublicNews.Email..." style="width:100%" />
                    </div>
                    <!-- /input-group -->
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btnx green btn-outline btn-md" id="btnSearch"><i class="fa fa-search"></i></button>
                    <button type="reset" class="btn btnx red btn-outline btn-md" id="btnClearForm"><i class="fa fa-undo"></i></button>
                </div>
            </div>


        </form>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-advance table-hover" id="tblComments" style="width: 100%">
                    <thead>
                        <tr>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Article</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Name</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Email</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Comment</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.InsertedDate</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.IsApproved</th>
                            <th scope="col"><i class="icon-settings"></i></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section style{
    @Styles.Render("~/DataTables/css")
    <link href="~/Content/assets/global/plugins/typeahead/typeahead.css" rel="stylesheet" />
    <style>
        table.dataTable tbody td {
            vertical-align: middle !important;
        }

        .fileinput.input-group {
            border-left: 1px solid #c0c0c0 !important;
        }
    </style>
}
@section scripts{
    @Scripts.Render("~/DataTables/Js")
    @Scripts.Render("~/Typeahead/Js")
    @Scripts.Render("~/DateTimePickers/js")
    <script src="~/Content/assets/global/plugins/bootbox/bootbox.min.js"></script>
    <script src="~/Scripts/ControlPanelScripts.js"></script>
}
@section OnReadyScripts
{
    ControlPanelScripts.initComments();
}