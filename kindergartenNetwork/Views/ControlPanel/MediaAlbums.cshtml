
<div class="row">
    
    <div class="col-md-12">
        <div class="portlet light portlet-fit ">
            <div class="portlet-title">
                <div class="caption">
                    @*<i class="icon-layers font-red-thunderbird"></i>*@
                    <span class="caption-subject font-red-thunderbird bold uppercase">@kindergartenNetwork.Resources.PublicNews.Media</span>
                </div>
                @*<div class="actions portelActionPadding">
                        <a href="javascript:;" class="btn btn-circle btn-default btnSaveMedia" data-id="0">
                            <i class="fa fa-plus"></i> @kindergartenNetwork.Resources.PublicNews.Add @kindergartenNetwork.Resources.PublicNews.Media
                        </a>
                    </div>*@
                <button type="button" class="btn btnx blue btn-outline btn-md pull-right btnSaveMedia" data-id="0"><i class="fa fa-plus"></i></button>
            </div>
            <div class="portle-body">
                <input type="hidden" id="hdAlbumId" value="" />
                <table class="table table-bordered table-advance table-hover" id="tblMedia" style="width: 100%">
                    <thead>
                        <tr>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Image</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Type</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Description</th>
                            <th scope="col"><i class="icon-settings"></i></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

    </div>
</div>


@section style{
    @Styles.Render("~/DataTables/css")
    <style>
        table.dataTable tbody td {
            vertical-align: middle !important;
        }
    </style>
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/assets/global/plugins/colorbox-master/example1/colorbox.css" rel="stylesheet" />
    <link href="~/Content/assets/global/plugins/typeahead/typeahead.css" rel="stylesheet" />
    <link href="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" />
    <link href="~/Content/assets/global/plugins/dropzone/dropzone.min.css" rel="stylesheet" />

}
@section scripts{
    @Scripts.Render("~/DataTables/Js")
    @Scripts.Render("~/Typeahead/Js")
    <script src="~/Content/assets/global/plugins/dropzone/dropzone.min.js"></script>
    <script src="~/Content/assets/global/plugins/colorbox-master/jquery.colorbox-min.js"></script>
    <script src="~/Content/assets/global/plugins/bootbox/bootbox.min.js"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js"></script>
    <script src="~/Content/assets/global/plugins/jquery-validation/js/jquery.validate.js"></script>
    <script src="~/Scripts/ControlPanelScripts.js"></script>
}
@section OnReadyScripts
{
    ControlPanelScripts.initMedia();
}