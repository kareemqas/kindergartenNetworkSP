@model kindergartenNetwork.Models.NewsModels.ProfileModel
	<div class="modal-dialog">
		<div class="modal-content">
		    <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
		        <h4 class="modal-title">@kindergartenNetwork.Resources.PublicNews.ChangePassword</h4>
		    </div>
         @using (Html.BeginForm("UpdatePassword", "ControlPanel", FormMethod.Post, new {@onsubmit = "return false;", @class = "form-horizontal form-row-seperated", @id = "UpdatePassForm",@name="UpdatePassForm"}))
         {
              <div class="modal-body">
              <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button> @kindergartenNetwork.Resources.PublicNews.ErrorInField.
                </div>
                <div class="alert alert-success display-hide">
                    <button class="close" data-close="alert"></button>
                </div>
                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="col-md-4 control-label">@kindergartenNetwork.Resources.PublicNews.CurrentPass</label>
                        <div class="col-md-8">
                            <div class="formElement">
                                <input type="password" id="tbCurrentPassword" name="CurrentPassword" class="form-control input-inline input-medium" placeholder="@kindergartenNetwork.Resources.PublicNews.CurrentPass" data-field="@kindergartenNetwork.Resources.PublicNews.CurrentPass" />
                                <span class="help-inline"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">@kindergartenNetwork.Resources.PublicNews.NewPassword</label>
                        <div class="col-md-8">
                            <div class="formElement">
                                <input type="password" id="tbNewPassword" name="NewPassword" class="form-control input-inline input-medium" placeholder="@kindergartenNetwork.Resources.PublicNews.NewPassword" data-field="@kindergartenNetwork.Resources.PublicNews.NewPassword"/>
                                <span class="help-inline"></span>
                            </div>
                        </div>
                    </div>
                 <div class="form-group">
                        <label class="col-md-4 control-label">@kindergartenNetwork.Resources.PublicNews.ConfirmPassword</label>
                        <div class="col-md-8">
                            <div class="formElement">
                                <input type="password" id="tbConfirmPassword" name="ConfirmPassword" class="form-control input-inline input-medium" placeholder="@kindergartenNetwork.Resources.PublicNews.ConfirmPassword" data-field="@kindergartenNetwork.Resources.PublicNews.ConfirmPassword"/>
                                <span class="help-inline"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
             <div class="modal-footer">
                 <button type="button" class="btn dark btn-outline" data-dismiss="modal">@kindergartenNetwork.Resources.PublicNews.Close</button>
                <button type="submit" class="btn green btn-outline">@kindergartenNetwork.Resources.PublicNews.Save</button>
                 <button type="reset" class="btn red btn-outline">@kindergartenNetwork.Resources.PublicNews.Reset</button>

             </div>
         }
		</div>
			       
	</div>
			    

