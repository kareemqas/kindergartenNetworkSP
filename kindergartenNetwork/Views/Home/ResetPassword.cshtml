@{
    ViewBag.Title = kindergartenNetwork.Resources.PublicNews.ForgotYourPassword + " | " + kindergartenNetwork.Resources.PublicNews.ProjectName;
    Layout = "~/Views/Shared/_DefLayout.cshtml";

    var id = 0;
    var token = "";
    if (ViewContext.RouteData.Values["id"] != null)
    {
        id = Convert.ToInt32(ViewContext.RouteData.Values["id"].ToString());
    }
    if (ViewContext.RouteData.Values["token"] != null)
    {
        token = ViewContext.RouteData.Values["token"].ToString();
    }
}

<!-- Start Page Title Area -->
<div class="page-title-area bg-9">
    <div class="container">
        <div class="page-title-content">
            <h2>إسترجاع كلمة المرور</h2>
            <ul>
                <li>
                    <a href="@Url.Action("Contact", "Home", null, Request.Url.Scheme)">
                        الرئيسية
                    </a>
                </li>

                <li class="active">إسترجاع كلمة المرور</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title Area -->
<!-- Start Recover Password Area -->
<section class="user-area-style recover-password-area ptb-100">
    <div class="container">
        <div class="contact-form-action recover">
            <div class="form-heading text-center">
                <h3 class="form-title">إعادة تعيين كلمة المرور!</h3>

            </div>

            @using (Html.BeginForm("ResetPasswordFn", "Home", FormMethod.Post, new { onsubmit = "return false;", id = "ResetPasswordForm", name = "ResetPasswordForm" }))
            {
                <input type="hidden" id="id" value="@id" />
                <input type="hidden" id="token" value="@token" />
                <div class="row">

                    <div class="alert alert-danger" style="display: none">
                        <button class="close" data-close="alert"></button>
                        <span>@kindergartenNetwork.Resources.PublicNews.EnterAnyUsernameAndPassword</span>
                    </div>
                    <div class="alert alert-success" style="display: none">
                        <button class="close" data-close="alert"></button>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" type="password" id="password" name="password" required placeholder="كلمة المرور الجديدة">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="password" name="confirm_password" id="confirm_password" required placeholder="تأكيد كلمة المرور الجديدة">
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <a class="now-log-in font-q" href="@Url.Action("Login", "Home", null, Request.Url.Scheme)">تسجيل الدخول إلى حسابك</a>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <p class="now-register">
                            لست عضواً؟
                            <a class="font-q" href="@Url.Action("Registration", "Home", null, Request.Url.Scheme)">سجل الأن</a>
                        </p>
                    </div>

                    <div class="col-12">
                        <button class="default-btn btn-two" type="submit">
                            إعادة تعيين كلمة المرور
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Recover Password Area -->
@section scripts{
    <script src="~/Content/assets/global/plugins/jquery-validation/js/jquery.validate.js"></script>
    <script src="~/Scripts/visitorLogin.js"></script>
}
@section OnReadyScripts
{
    Login.initResetPassword();
}