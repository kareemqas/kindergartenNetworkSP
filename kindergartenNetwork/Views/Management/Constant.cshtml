@model kindergartenNetwork.Models.MainModels.ConstantModel
<div class="portlet light portlet-fit ">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-layers font-red-thunderbird"></i>
            <span class="caption-subject font-red-thunderbird bold uppercase">@ViewBag.PageTitle</span>
        </div>
    </div>
    <div class="portletbody">

        <form id="SearchForm" role="form">
            <div class="row">

                <div class="col-md-3  col-md-offset-2">
                    <div class="form-group">
                        <input type="text" class="form-control input-md input-medium" dir="rtl" id="txtConstantSearch" placeholder="@kindergartenNetwork.Resources.PublicNews.Name.." />
                    </div>
                    <!-- /input-group -->
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <select class="selectpicker form-control input-md input-medium" id="ddlParentConstant" data-live-search="true">
                            <option value="">@kindergartenNetwork.Resources.PublicNews.SelectParent</option>
                            @foreach (var constant in Model.LstConstants)
                        {
                            <option value="@constant.Id">@constant.Name</option>
                    }
                        </select>
                    </div>
                    <!-- /input-group -->
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btnx green btn-outline btn-md" id="btnSearch"><i class="fa fa-search"></i></button>
                    <button type="reset" class="btn btnx red btn-outline btn-md" id="btnClearForm"><i class="fa fa-undo"></i></button>
                    <button type="button" class="btn btnx blue btn-outline btn-md" id="btnGetInsertConstantModal"><i class="fa fa-plus"></i></button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-advance table-hover" id="tblConstant" style="width: 100%">
                    <thead>
                        <tr>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Num</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Name</th>
                            <th scope="col"> @kindergartenNetwork.Resources.PublicNews.Parent</th>
                            <th scope="col"><i class="icon-settings"></i></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>


    </div>
</div>

@section style{
    @Styles.Render("~/DataTables/css")
    <link href="~/Content/assets/global/plugins/typeahead/typeahead.css" rel="stylesheet" />
}
@section scripts{
    @Scripts.Render("~/DataTables/Js")
    @Scripts.Render("~/Typeahead/Js")
    <script src="~/Content/assets/global/plugins/bootbox/bootbox.min.js"></script>
    <script src="~/Content/assets/global/plugins/jquery-validation/js/jquery.validate.js"></script>
    <script src="~/Scripts/ManagementScripts.js"></script>
}
@section OnReadyScripts
{
    ManagementScripts.initConstant();
}