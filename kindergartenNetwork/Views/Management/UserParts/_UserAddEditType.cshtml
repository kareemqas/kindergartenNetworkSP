
@model kindergartenNetwork.Models.MainModels.UserTypeModel
	<div class="modal-dialog">
		<div class="modal-content">
		    <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
		        <h4 class="modal-title">@kindergartenNetwork.Resources.PublicNews.Add/@kindergartenNetwork.Resources.PublicNews.Edit</h4>
		    </div>
         @using (Html.BeginForm("AddEditUserType", "Management", FormMethod.Post, new {@onsubmit = "return false;", @class = "form-horizontal form-row-seperated", @id = "AddUserType",@name="AddUserType"}))
         {
             <div class="modal-body">
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button> @kindergartenNetwork.Resources.PublicNews.ErrorInField.
                </div>
                 <div class="alert alert-success display-hide">
                     <button class="close" data-close="alert"></button>
                 </div>
                 @Html.AntiForgeryToken()
                <div class="form-group">
                        <label class="col-md-3 control-label">@kindergartenNetwork.Resources.PublicNews.Name</label>
                        <div class="col-md-9">
                            <div class="formElement">
                                <input type="text" id="tbName" name="Name" class="form-control input-inline input-medium" placeholder="@kindergartenNetwork.Resources.PublicNews.Name" data-field="@kindergartenNetwork.Resources.PublicNews.Name" value="@Model.OUserType.Name" />
                                <span class="help-inline"></span>
                                <input type="hidden" id="tbID" name="ID" value="@Model.OUserType.Id" />
                                <span class="help-inline"></span>
                            </div>
                        </div>
                    </div>

             </div>
             <div class="modal-footer">
                 <button type="button" class="btn dark btn-outline" data-dismiss="modal">@kindergartenNetwork.Resources.PublicNews.Close</button>
                <button type="submit" class="btn green btn-outline">@kindergartenNetwork.Resources.PublicNews.Save</button>
                 <button type="reset" class="btn red btn-outline">@kindergartenNetwork.Resources.PublicNews.Reset</button>

             </div>
         }
		</div>
			       
	</div>
			    

